{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["declarations/*.d.ts", "next-env.d.ts", "audio-env.d.ts", "**/*.ts", "**/*.tsx", "components/Scene/index.jsx", "components/Scene/Scene.jsx", "components/Planet/shaders/atmosphere.js"],
  "exclude": ["node_modules"],
}
